<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.RegistrationActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_registration" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_driver_name"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleContentDescription="description"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_driver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ваше имя"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_driver_surname"
        android:layout_below="@id/text_input_layout_driver_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleContentDescription="description"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_driver_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ваша фамилия"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_driver_phone"
        android:layout_below="@id/text_input_layout_driver_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleContentDescription="description"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_driver_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ваш номер телефона"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_driver_vehicle_registration_plate"
        android:layout_below="@id/text_input_layout_driver_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleContentDescription="description"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_driver_vehicle_registration_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Гос. номер вашего авто"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_driver_login"
        android:layout_below="@id/text_input_layout_driver_vehicle_registration_plate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleContentDescription="description"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_driver_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ваш логин"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_driver_password"
        android:layout_below="@id/text_input_layout_driver_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleContentDescription="description"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_driver_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ваш пароль"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_registration"
        android:layout_below="@id/text_input_layout_driver_password"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:background="#477ec2"
        android:textColor="#ffffffff"/>

</RelativeLayout>